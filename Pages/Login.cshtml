@page
@model Review_Film_Project.Pages.LoginModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>

	<title>Đăng nhập</title>
	<link rel="stylesheet" href="~/css/login.css" type="text/css" />
	<style>
		
		.validation-summary-errors ul {
			list-style-type: none;
			padding: 0; /* Loại bỏ padding */
			margin: 0; /* Loại bỏ margin */
		}
	</style>

</head>
<body>
	<section>
		<div class="form-box">
			<div class="form-value">
				<form asp-action="Login" method="post" class="needs-validation" novalidate>
					<h2>Login</h2>
					<div class="inputbox">
						<ion-icon name="mail-outline"></ion-icon>
						<input asp-for="Email" type="text" class="form-control" id="username" autofocus="autofocus" required />
						<label>Email</label>
					</div>
				<span class="text-danger" asp-validation-for="Email"></span>

					<div class="inputbox">
						<ion-icon name="lock-closed-outline"></ion-icon>
						<input asp-for="Password" type="password" class="form-control" id="password" required />
						<label>Password</label>
					</div>
				<span class="text-danger" asp-validation-for="Password"></span>


					<br>

					<div asp-validation-summary="All"></div>
					<br>
					<div class="forgot">
						<a href="#">Forgot Password</a>

					</div>
					<button type="submit">Đăng nhập</button>
					<div class="register">
						<p>Chưa có tài khoản ? <a href="/register">Đăng ký</a></p>
					</div>
				</form>
			</div>
		</div>

	</section>
	<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


</body>
</html>
